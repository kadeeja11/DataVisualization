<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Visualizations</title>
    <!-- Include Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- Include Plotly.js -->
    <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
    <style>
        /* General styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        h1 {
            text-align: center;
            margin-top: 20px;
            color: #333;
        }

        .container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            margin-top: 20px;
        }

        .chart-container {
            width: 400px;
            margin-bottom: 20px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            background-color: #fff;
        }

        .chart-title {
            text-align: center;
            margin-bottom: 10px;
            color: #333;
        }

        /* Styles for specific charts */
        canvas {
            max-width: 100%;
        }
    </style>
</head>
<body>
<h1>Data Visualizations</h1>

<div class="container">
    <div class="chart-container">
        <h2 class="chart-title">Chart 1: Intensity by Sector</h2>
        <canvas id="chart1"></canvas>
    </div>

    <div class="chart-container">
        <h2 class="chart-title">Chart 2: Impact vs. Intensity</h2>
        <canvas id="chart2"></canvas>
    </div>

    <div class="chart-container">
        <h2 class="chart-title">Chart 3: Relevance vs. Likelihood</h2>
        <canvas id="chart3"></canvas>
    </div>

    <div class="chart-container">
        <h2 class="chart-title">Chart 4: Country vs. Sector</h2>
        <canvas id="chart4"></canvas>
    </div>

    <div class="chart-container">
        <h2 class="chart-title">Chart 5: Sector vs. Topic</h2>
        <div id="chart5"></div>
    </div>
</div>

<script>
    // Fetch data from the server
    fetch('http://localhost:3001/getData')
      .then(response => response.json())
      .then(data => {
        console.log(data); // Log the fetched data to the console

        // Call functions to create each chart with the fetched data
        createChart1(data);
        createChart2(data);
        createChart3(data);
        createChart4(data);
        createChart5(data);
      })
      .catch(error => {
        console.error('Error fetching data:', error);
      });

    // Function to create Chart 1
    function createChart1(data) {
        // Extract sector and intensity data from the provided data
        const sectors = data.map(entry => entry.sector);
        const intensity = data.map(entry => entry.intensity);

        // Create a bar chart using Chart.js
        new Chart(document.getElementById('chart1').getContext('2d'), {
            type: 'bar',
            data: {
                labels: sectors,
                datasets: [{
                    label: 'Intensity',
                    data: intensity,
                    backgroundColor: 'rgba(255, 99, 132, 0.7)'
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Intensity'
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'Sector'
                        }
                    }
                }
            }
        });
    }

    // Function to create Chart 2
    function createChart2(data) {
        // Extract intensity and impact data from the provided data
        const intensity = data.map(entry => entry.intensity);
        const impact = data.map(entry => entry.impact);

        // Create a scatter plot using Chart.js
        new Chart(document.getElementById('chart2').getContext('2d'), {
            type: 'scatter',
            data: {
                datasets: [{
                    label: 'Intensity vs. Impact',
                    data: data.map(entry => ({ x: entry.intensity, y: entry.impact })),
                    backgroundColor: 'rgba(54, 162, 235, 0.7)',
                    pointRadius: 5,
                    pointHoverRadius: 8
                }]
            },
            options: {
                scales: {
                    x: {
                        title: {
                            display: true,
                            text: 'Intensity'
                        }
                    },
                    y: {
                        title: {
                            display: true,
                            text: 'Impact'
                        }
                    }
                }
            }
        });
    }

    // Function to create Chart 3
    function createChart3(data) {
        // Extract relevance and likelihood data from the provided data
        const relevance = data.map(entry => entry.relevance);
        const likelihood = data.map(entry => entry.likelihood);

        // Create a scatter plot using Chart.js
        new Chart(document.getElementById('chart3').getContext('2d'), {
            type: 'scatter',
            data: {
                datasets: [{
                    label: 'Relevance vs. Likelihood',
                    data: data.map(entry => ({ x: entry.relevance, y: entry.likelihood })),
                    backgroundColor: 'rgba(255, 99, 132, 0.7)',
                    pointRadius: 5,
                    pointHoverRadius: 8
                }]
            },
            options: {
                scales: {
                    x: {
                        title: {
                            display: true,
                            text: 'Relevance'
                        }
                    },
                    y: {
                        title: {
                            display: true,
                            text: 'Likelihood'
                        }
                    }
                }
            }
        });
    }

    // Function to create Chart 4
    function createChart4(data) {
        // Extract country and sector data from the provided data
        const countries = data.map(entry => entry.country);
        const sectors = data.map(entry => entry.sector);

        // Count occurrences of each combination of country and sector
        const counts = {};
        for (let i = 0; i < countries.length; i++) {
            const key = countries[i] + '_' + sectors[i];
            counts[key] = (counts[key] || 0) + 1;
        }

        // Prepare labels and data for the chart
        const labels = Object.keys(counts);
        const dataValues = Object.values(counts);

        // Create a bar chart using Chart.js
        new Chart(document.getElementById('chart4').getContext('2d'), {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Country vs. Sector',
                    data: dataValues,
                    backgroundColor: 'rgba(255, 99, 132, 0.2)',
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
    }

    // Function to create Chart 5
    function createChart5(data) {
        const sectors = data.map(item => item.sector);
        const topics = data.map(item => item.topic);
        const trace = {
            x: sectors,
            y: topics,
            mode: 'markers',
            type: 'scatter'
        };
        Plotly.newPlot('chart5', [trace]);
    }
</script>
</body>
</html>
